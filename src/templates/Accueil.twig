        $(document).ready(function () {
            $('.select2').each(function () {
                let $select = $(this);
                let sourceUrl = $select.data('source');

                // Récupérez les options en utilisant une requête AJAX
                $.ajax({
                    url: sourceUrl,
                    dataType: 'json',
                    success: function (data) {
                        data.unshift({"id": '', "text": ''});
                        // Utilisez les données récupérées comme source statique pour Select2
                        $select.select2({
                            placeholder: "Sélectionnez une option",
                            data: data // Utilisez le tableau JSON récupéré
                        });
                    }
                });
            });
        });
